
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Business Profile: Users can only read/write their own profile
    match /businessProfile/{docId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // User Profile: Users can only read/write their own profile (document ID is the user ID)
    match /userProfile/{userId} {
       allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Customers, Invoices, Products, Purchases, Vendors:
    // Users can create, read, update, and delete their own documents.
    match /{collection}/{docId} {
       allow read, create, update, delete: if isAuthenticated() && isOwner(request.resource.data.userId);
       allow read, update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
  }
}
